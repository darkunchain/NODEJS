<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id %>" method="POST">
          <div class="form-group">
            <input type="text" name="label" value="<%= data.label%>" placeholder="Valor x" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="valor" value="<%= data.valor%>" placeholder="Valor " class="form-control">
          </div> 
          <div class="form-group">
              <input type="text" name="valor1" value="<%= data.valor1%>" placeholder="Valor 1" class="form-control">
            </div> 
            <div class="form-group">
                <input type="text" name="valor2" value="<%= data.valor2%>" placeholder="Valor 2" class="form-control">
              </div> 
              <div class="form-group">
                  <input type="text" name="valor3" value="<%= data.valor3%>" placeholder="Valor 3" class="form-control">
                </div>       

          <button type="submit" class="btn btn-primary">
            save data
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>

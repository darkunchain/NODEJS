<% include partials/_header %>

<div class="container mt-5">


  <div class="row">
    <div class="col-md-6">
      <h1>Grafica de torta</h1>
      <canvas id="torta" width="800" height="600"></canvas>
    </div>

    <div class="col-md-6">
      <h1>Grafica de dona</h1>
      <canvas id="dona" width="800" height="600"></canvas>
    </div>
  </div>
  <div class="row">
    

    <div class="col-md-6">
        <h1>Grafica de barras</h1>
        <canvas id="bars" width="800" height="600"></canvas>
      </div>

      <div class="col-md-6">
          <h1>Grafica de barras</h1>
          <canvas id="otra" width="800" height="600"></canvas>
        </div>

  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="card-body">

        <form action="/add" method="POST">
          <div class="form-group">
            <input type="text" name="label" placeholder="Label" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="valor" placeholder="Valor" class="form-control">
          </div>
          <div class="form-group">
              <input type="text" name="valor1" placeholder="Valor 1" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="valor2" placeholder="Valor 2" class="form-control">
              </div>
              <div class="form-group">
                  <input type="text" name="valor3" placeholder="Valor 3" class="form-control">
                </div>
          <button type="submit" class="btn btn-primary">
            save data
          </button>
        </form>
      </div>
    </div>
    <div class="col-md-8">
      <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <th>nÂ°</th>
            <th>Label</th>
            <th>Valor</th>
            <th>Valor1</th>
            <th>Valor2</th>
            <th>Valor3</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
          <% for(var i = 0; i < data.length; i++) { %>
          <tr>
            <td><%= (i + 1) %></td>
            <td id="label<%= i %>"><%= data[i].label %></td>
            <td id="valor<%= i %>"><%= data[i].valor %></td>
            <td id="valor1<%= i %>"><%= data[i].valor1 %></td>
            <td id="valor2<%= i %>"><%= data[i].valor2 %></td>
            <td id="valor3<%= i %>"><%= data[i].valor3 %></td>
            <td>
              <a href="/update/<%= data[i].id %>" class="btn btn-info btn-sm">Edit</a>
              <a href="/delete/<%= data[i].id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
          <% } %>

          <% } %>
          <td>
            Total :
          </td>
          <td id="total">
            <%= i %>
          </td>
        </tbody>
      </table>
    </div>
    
  </div>

</div>
<script src="graficas.js"></script>
<% include partials/_footer %>
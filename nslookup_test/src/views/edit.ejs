<% include partials/_header %>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-3 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= coord._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="x" placeholder="Valor X" value="<%= coord.x %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="y" placeholder="Valor Y" value="<%= coord.y %>">
            </div>
            <button class="btn btn-primary" type="submit">
              Update 
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


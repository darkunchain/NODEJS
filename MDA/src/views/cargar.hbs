  <div class="row">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center"><b> Carga de archivos</b></h4>
            </div>
            <div class="card-body">
                <div class="row">
                    {{#each nameCarga}}        
                        <div class="col col-md-4 col-lg-4 col-xl-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Cargar archivo {{this}}</h5>
                                </div>
                                <div class="card-body">
                                    <form ref="uploadForm" id="uploadForm{{inc @index}}" action="/upload" method="POST" encType="multipart/form-data">
                                        <input type="text" name="idCarga" value="{{inc @index}}" class="sr-only"/>
                                        <div class="form-group">
                                            <input class="form-control" type="file" name="file" />
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="fileName" placeholder="Digite un nombre de archivo" class="form-control"/>
                                        </div>
                                        <div class="form-group">
                                            <input class="form-control btn btn-primary" type="submit" value="Upload!"/>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>        
                    {{/each}}
                </div>
            </div>
        </div>
    </div>    
  </div>
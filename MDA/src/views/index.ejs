<%- include ('partials/_header'); -%>

<div class="row">
  <div class="col-md-3 col-lg-3 col-xl-3">
    <div class="container">
      <div class="card">
        <div class="card-header">
          <h4 class="text-center"><b> Carga de archivos</b></h4>
        </div>
        <% for (var i=0; i < 3; i++) {%>
        <div class="card-body">
          <form
            ref="uploadForm"
            id="uploadForm<%= i+1 %>"
            action="/upload"
            method="POST"
            encType="multipart/form-data"
          >
            <div class="form-group">
              <h5>Cargar archivo <%= nameCarga[i] %></h5>
            </div>
            <input
              type="text"
              name="idCarga"
              value="<%=i+1%>"
              class="sr-only"
            />
            <div class="form-group">
              <input class="form-control" type="file" name="file" />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="fileName"
                placeholder="Digite un nombre de archivo"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <input
                class="form-control btn btn-primary"
                type="submit"
                value="Upload!"
              />
            </div>
          </form>
        </div>
        <% }; %>
      </div>
    </div>
    <p></p>
  </div>
  <div class="col-md-8 col-lg-8 col-xl-8">
    <table class="table table-fixed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre de archivo</th>
          <th>Fecha</th>
          <th>Categoria</th>
          <th>Accion</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i = 0; i < listaIM.length; i++){%>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= listaIM[i].nombre %></td>
          <td><%= listaIM[i].fecha %></td>
          <td><%= listaIM[i].categoria %></td>
          <td>
            <a
              href="/usar/<%= listaIM[i]._id %>/<%=
            listaIM[i].categoria %>"
              class="btn <%= listaIM[i].status ? 'btn-success' : 'btn-secondary'%>"
              >usar</a
            >
          </td>
          <td>
            <a
              href="/borrar/<%= listaIM[i]._id %>/<%=
              listaIM[i].categoria %>"
              class="btn btn-danger"
              >eliminar</a
            >
          </td>
        </tr>
        <% }; %>
      </tbody>
    </table>

<%- include ('partials/_header'); -%>


<div class="row">
  <div class="col-md-3 col-lg-3 col-xl-3">
    <div class="container">
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            <h4 class="text-center"><b> Carga de archivos</b></h4>
          </div>
          <% for (var i=0; i < 3; i++) {%>
          <form ref='uploadForm' id='uploadForm<%= i+1 %>' action='/upload/<%=i+1%>/file<%= i+1 %>' method='POST' encType="multipart/form-data">            
            <div class="form-group">
              <h5>Cargar archivo <%= nameCarga[i] %></h5>
              <input class="form-control" type="file" name='file<%= i+1 %>' />
              <input class="form-control btn btn-primary" type='submit' value='Upload!' />
            </div>
          </form>
          <% }; %>
        </div>
      </div>
    </div>
    <p></p>
  </div>
  <div class="col-md-8 col-lg-8 col-xl-8">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre de archivo</th>
          <th>Fecha</th>
          <th>Categoria</th>
          <th>Accion</th>
        </tr>
      </thead>
      <tbody>
        <% for(var item in lista){%>
          <tr>
            <td><%= item %></td>
            <td><%= lista[item].nombre %></td>
            <td><%= lista[item].fecha %></td>
            <td><%= lista[item].categoria %></td>
            <td><button class="btn btn-secondary">usar</button></td>
            <td><button class="btn btn-danger">eliminar</button></td>
          </tr>
          <% }; %>
      </tbody>
    </table>
  </div>
</div>


<%- include ('partials/_footer'); -%>